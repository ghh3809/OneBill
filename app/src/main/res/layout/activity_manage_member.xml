<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ic_background">
    <ImageButton
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:scaleType="fitXY"
        android:background="#0000"
        android:src="@mipmap/arrow_head_left"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/left_margin" />
    <TextView
        android:text="@string/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/darkGreen"
        android:textSize="@dimen/text_title"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginLeft="@dimen/left_margin"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="+添加成员"
        android:gravity="center"
        android:background="@color/colorWhiteAlpha"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/addButton"
        android:layout_marginTop="@dimen/up_margin"
        android:onClick="addPersonAndShowEdit"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_marginTop="@dimen/up_margin"
        android:id="@+id/linearLayoutNotUsed">
        <EditText
            android:id="@+id/editText01Edit"
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:layout_marginLeft="@dimen/left_margin"
            android:text=""
            android:hint="请输入人名"
            android:background="@drawable/edit_shape"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/colorText"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/addButton"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="确认"
                android:gravity="center"
                android:background="@drawable/button_shape"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_normal"
                android:id="@+id/button01Edit"
                android:layout_marginRight="@dimen/left_margin"
                android:layout_gravity="right|center_vertical"
                android:onClick="editPersonAndRefreshListView01"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/listView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:divider="@color/colorLine"
        android:layout_below="@+id/linearLayoutNotUsed"
        android:layout_marginTop="@dimen/up_margin">
    </ListView>

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="oneBill.presentation.Account"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivToMainFromAccount"
            android:src="@mipmap/paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvNameInAccount"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  账本"
            android:textSize="25sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:background="#000"
            android:text=""
            android:layout_width="10sp"
            android:layout_height="90sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="  总计消费"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="40sp"
                    android:text="    ￥    "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvAccount"
                    android:textSize="40sp"
                    android:text="0.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:background="#000"
            android:layout_width="10sp"
            android:layout_height="30sp" />

        <TextView
            android:textSize="18sp"
            android:text="  消费记录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="18sp"
            android:text="时间"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18sp"
            android:text="类型"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18sp"
            android:text="消费"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ScrollView
        android:background="#fff"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:layout_width="fill_parent"
        android:layout_height="260sp">

        <LinearLayout
            android:id="@+id/linearAccount"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAddLogFromAccount"
            android:src="@mipmap/plus_full"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30sp" />

        <ImageView
            android:id="@+id/ivToMemberFromAccount"
            android:src="@mipmap/usher"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30sp" />

        <ImageView
            android:id="@+id/ivToClearFromAccount"
            android:src="@mipmap/paper_plane"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30sp" />

        <ImageView
            android:id="@+id/ivDeleteFromAccount"
            android:src="@mipmap/trash"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="16sp"
            android:text="       记账"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <TextView
            android:textSize="16sp"
            android:text="     人员"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <TextView
            android:textSize="16sp"
            android:text="     清账"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />

        <TextView
            android:textSize="16sp"
            android:text="      删除"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>

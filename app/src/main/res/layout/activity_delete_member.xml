<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ic_background"
    tools:context="oneBill.presentation.DeleteMember">


    <ImageButton
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:scaleType="fitXY"
        android:background="#0000"
        android:src="@mipmap/arrow_head_left"
        android:id="@+id/goBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/left_margin" />
    <TextView
        android:text="@string/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookTitle"
        android:textColor="@color/darkGreen"
        android:textSize="@dimen/text_title"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/goBack"
        android:layout_toEndOf="@+id/goBack"
        android:layout_marginLeft="@dimen/left_margin"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:src="@drawable/cry"
        android:id="@+id/photo"
        android:layout_below="@id/bookTitle"
        android:layout_marginTop="@dimen/up_margin_small"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="为什么要离开……"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/photo"
        android:layout_marginTop="@dimen/up_margin_small"
        android:layout_marginLeft="@dimen/left_margin"
        android:id="@+id/personName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="脱离组织需要付清/收清"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/personName"
        android:layout_marginTop="@dimen/up_margin_small"
        android:layout_marginLeft="@dimen/left_margin"
        android:id="@+id/text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥**.**"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/text"
        android:layout_marginTop="@dimen/up_margin_small"
        android:layout_toRightOf="@+id/text"
        android:layout_marginLeft="@dimen/left_margin"
        android:id="@+id/bill"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易者"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/bill"
        android:layout_marginTop="@dimen/up_margin_small"
        android:layout_marginLeft="120dp"
        android:id="@+id/to"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGreen"
        android:textSize="@dimen/text_normal"
        android:layout_alignTop="@+id/to"
        android:layout_marginLeft="200dp"
        android:id="@+id/personNameTo"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_comfirm"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/to"
        android:layout_marginTop="@dimen/up_margin_small"
        android:background="@drawable/button_shape"
        android:id="@+id/deleteButton"
        android:layout_centerHorizontal="true" />



</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="oneBill.presentation.DeleteMember">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:src="@mipmap/arrow_head_left"
        android:id="@+id/goBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView android:text="@string/book_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookTitle"
        android:textColor="@color/darkGreen"
        android:textSize="@dimen/text_title"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/goBack"
        android:layout_toEndOf="@+id/goBack"
        android:layout_alignBottom="@+id/goBack" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_head_left"
        android:layout_below="@id/goBack"
        android:layout_marginTop="@dimen/up_margin"
        android:id="@+id/photo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="为什么要离开我……"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_alignBottom="@+id/photo"
        android:layout_toRightOf="@+id/photo"
        android:layout_toEndOf="@+id/photo"
        android:layout_marginLeft="@dimen/left_margin"
        android:id="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张三"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/photo"
        android:layout_marginTop="@dimen/up_margin_big"
        android:layout_marginLeft="@dimen/left_margin"
        android:id="@+id/personName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="脱离组织需要付清/收清"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/personName"
        android:layout_marginTop="@dimen/up_margin"
        android:layout_marginLeft="@dimen/left_margin"
        android:id="@+id/text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥**.**"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/text"
        android:layout_marginTop="@dimen/up_margin"
        android:layout_toRightOf="@+id/text"
        android:layout_marginLeft="@dimen/left_margin"
        android:id="@+id/bill"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还给"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_below="@+id/bill"
        android:layout_marginTop="@dimen/up_margin"
        android:layout_marginLeft="120dp"
        android:id="@+id/to"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGreen"
        android:textSize="@dimen/text_normal"
        android:layout_alignTop="@+id/to"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:id="@+id/personNameTo"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_comfirm"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_normal"
        android:layout_alignRight="@+id/bill"
        android:layout_alignEnd="@+id/bill"
        android:layout_below="@+id/personNameTo"
        android:layout_marginTop="@dimen/up_margin"
        android:background="@drawable/button_shape"
        android:id="@+id/deleteButton"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textviewBand"
            android:layout_width="@dimen/bandWidth"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/textviewBookName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/left_margin_big"
            android:gravity="center|left"
            android:text="aaaaa"
            android:textSize="@dimen/text_normal"/>

        <ImageView
            android:id="@+id/imageviewAddRecord"
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/left_margin"
            android:layout_marginLeft="@dimen/left_margin"
            android:src="@mipmap/plus_full"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textviewSum"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_large"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/left_margin_big"
        android:text="aaaaaaa"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textviewRecent"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_small"
        android:layout_marginLeft="@dimen/left_margin_big"
        android:layout_marginBottom="10dp"
        android:text="aaaaaaaaaaaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
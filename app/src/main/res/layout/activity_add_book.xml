<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addbooklay"
    android:background="@drawable/ic_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="oneBill.presentation.AddBook">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imagebtnback"
        android:src="@mipmap/arrow_head_left"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imagebtnok"
        android:src="@mipmap/arrow_head_right"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/llayoutaddbook">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="账本名称"
        android:id="@+id/textView"
        android:textColor="@color/colorText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/text_normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:hint="输入账本名"
        android:textSize="@dimen/text_normal"
        android:id="@+id/etname"
        android:background="@drawable/edit_shape"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="20dp"
        android:inputType="text" />

</RelativeLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:id="@+id/llaoutperson">
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="参与人员"
        android:id="@+id/textView2"
        android:textColor="@color/colorText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/text_normal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

      </LinearLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rlayoutibtn">
    <EditText
        android:layout_width="wrap_content"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:textSize="18sp"
        android:hint="输入参与人员"
        android:id="@+id/etperson"
        android:background="@drawable/edit_shape"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        />
    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imagebtnaddperson"
        android:src="@mipmap/usher_plus"
        android:layout_marginRight="20dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/etperson"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
  </LinearLayout>
</ScrollView>
    </RelativeLayout>
</LinearLayout>

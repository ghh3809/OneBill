<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="oneBill.presentation.ClearAccount"
    android:orientation="vertical"
    android:background="@drawable/ic_background">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivToAccountFromClear"
            android:src="@mipmap/arrow_head_left"
            android:layout_width="wrap_content"
            android:layout_height="30sp" />
        <TextView
            android:id="@+id/tvNameInClear"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  账本"
            android:textSize="25sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv1"
        android:layout_below="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <Button
        android:layout_below="@id/iv1"
        android:id="@+id/btnSolve"
        android:textSize="20sp"
        android:text="获取方案"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_below="@id/btnSolve"
        android:layout_width="match_parent"
        android:layout_height="5sp" />

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_below="@id/iv2"
        android:background="#40ffffff"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:layout_width="fill_parent"
        android:layout_height="200sp">

        <LinearLayout
            android:id="@+id/linearAccountClear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#40ffffff">

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/iv3"
        android:layout_below="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <ScrollView
        android:id="@+id/scroll2"
        android:layout_below="@id/iv3"
        android:background="#40ffffff"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:layout_width="fill_parent"
        android:layout_height="180sp">

        <LinearLayout
            android:id="@+id/linearAccountClearConstraint"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#40ffffff">

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/tvAddConstraint"
        android:background="#40ffffff"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:text="+增加约束"
        android:layout_width="match_parent"
        android:layout_height="25sp" />
</RelativeLayout>
